{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "Bundler",
    "strict": true,
    "lib": ["ES2022"],
    "allowImportingTsExtensions": true,
    "noEmit": true,
    "types": ["@cloudflare/workers-types/2023-07-01"],
    "outDir": "dist",
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "paths": {
      "@src/*": ["./src/*"]
    }
  },
  "include": ["src", "*.config.ts", "*.setup.ts", "worker-configuration.d.ts"],
  "exclude": ["test"]
}
